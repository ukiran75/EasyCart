<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D9D9D9"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_added"
        android:id="@+id/item_added"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_another"
        android:src="@drawable/add_item"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Another Item"
        android:id="@+id/textView4"
        android:layout_below="@+id/add_another"
        android:layout_alignRight="@+id/add_another"
        android:layout_alignEnd="@+id/add_another" />


</RelativeLayout>