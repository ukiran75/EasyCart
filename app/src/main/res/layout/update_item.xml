<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#D9D9D9">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView1"
        android:layout_alignEnd="@+id/textView3" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Users Rating: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/code_i"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginStart="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/quantity_i"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/code_i" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/description_i"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/quantity_i" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_i"
        android:src="@drawable/back"
        android:maxHeight="100dp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_i"
        android:src="@drawable/delete"
        android:layout_alignTop="@+id/back_i"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/back_i" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/price"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/description_i" />


</RelativeLayout>