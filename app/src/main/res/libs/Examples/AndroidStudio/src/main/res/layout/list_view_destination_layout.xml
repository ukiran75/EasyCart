<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:contentDescription="@string/list_view_slide_image_desc"
        android:scaleType="centerInside"
        android:layout_gravity="top"
        android:id="@+id/destinationImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="#aaffffff"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="9">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/separator"/>
        <ScrollView
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/scrollingLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/destinationTitle"
                    android:textSize="25sp"
                    android:maxLines="2"
                    android:lineSpacingExtra="-4dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#bb000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/destinationInfo"
                    android:textSize="12sp"
                    android:textColor="#bb000000"
                    android:layout_margin="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/destinationEnquiryLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <Button
            android:id="@+id/destinationEnquiry"
            android:text="@string/list_view_slide_enquiry"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>
