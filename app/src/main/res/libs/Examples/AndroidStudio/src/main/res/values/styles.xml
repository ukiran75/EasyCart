<resources>
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DataFormImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.ChartTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF222222</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchParent.Chart">
        <item name="android:layout_marginTop">@dimen/chart_margin_top</item>
    </style>

    <style name="MatchParent.ExampleFragment">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">35dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="BarTabHorizontal" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_selector</item>
        <item name="android:minHeight">76dp</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BarTabVertical" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_selector_horizontal</item>
        <item name="android:minHeight">76dp</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ScrollingTabViewStyle" parent="android:Widget.Holo.HorizontalScrollView">
        <item name="android:background">#FF252939</item>
    </style>

    <style name="ExampleGroupScrollingTabViewStyle" parent="android:Widget.Holo.HorizontalScrollView">
        <item name="android:background">#00000000</item>
    </style>

    <style name="ExampleGroupBarTabHorizontal" parent="android:Widget.Holo.Tab">
        <item name="android:background">#00000000</item>
    </style>


    <!--<style name="TabBar" parent="android:Widget.Holo.ActionBar.TabBar">-->
    <!--<item name="android:dividerPadding">0dp</item>-->
    <!--<item name="android:background">#FF252939</item>-->
    <!--</style>-->

    <style name="ActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#eee</item>
    </style>

    <style name="ExamplesActivityActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#FF252939</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="MainActivityActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#ff00BBBC</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/actionbar_spinner_arrow</item>
        <item name="android:paddingRight">12dp</item>

    </style>

    <style name="ExampleMenuButton">
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.20</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AnnotationsRadioButton">
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.20</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListViewListModeRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>

    <style name="AnnotationsRadioButtonLandscape">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">.20</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AxesCheckbox">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.50</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PanZoomCheckbox">
        <item name="android:checked">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@color/transparent</item>
    </style>

    <style name="PanZoomCheckboxPortrait" parent="PanZoomCheckbox">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_weight">.25</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="PanZoomCheckboxLandscape" parent="PanZoomCheckbox">
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="DrawerRadioButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/drawer_radio_button</item>
    </style>

    <style name="DrawerPositionButton">
        <item name="android:button">@drawable/drawer_position_button</item>
        <item name="android:background">@drawable/drawer_position_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
